<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.black.mapper.UserMapper">
    <select id="testFindUser" resultType="com.black.entity.User">
        SELECT * from user;
    </select>

    <insert id="registerUser" parameterType="com.black.entity.User" >
        INSERT INTO user ( user_id,user_email, user_name,user_password)
        VALUES
            ( #{userId}, #{userEmail},#{userName}, #{userPassword});
    </insert>
</mapper>